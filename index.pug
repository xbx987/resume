include pug-block/variables
include pug-block/mixins
-var subInf1={iClass:["fa","fa-user","fa-li"],content:"1995/男/2017年应届生" }
-var subInf2={iClass:["fa","fa-phone","fa-li"],content:"15268476208" }
-var subInf3={iClass:["fa","fa-envelope","fa-li"],content:"673806687@qq.com" }
-var subInf4={iClass:["fa","fa-home","fa-li"],content:"杭州市余杭区橄榄树花园21幢3单元1002室" }

-var intItem1={iClass:["fa","fa-graduation-cap","fa-fw"],name:"教育背景"}
-var intItem2={iClass:["fa","fa-wrench","fa-fw"],name:"个人技能"}
-var intItem3={iClass:["fa","fa-star","fa-fw"],name:"自我评价"}
-var intItem4={iClass:["fa","fa-book","fa-fw"],name:"个人作品"}
